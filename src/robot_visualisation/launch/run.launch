<launch>
      
	<arg name="robot" value="01"/> 
	<arg name="map" value="last_map"/>
   	 <rosparam command="load" file="$(env HOME)/catkin_ws/params/myparams.yaml"/> 
  	 

     <node pkg="tf" type="static_transform_publisher" name="odom_to_map" args="0.5 0 0 0 0 0 /map robot$(arg robot)/odom 20"/>
      <node pkg="tf" type="static_transform_publisher" name="base_to_odom" args="0 0.5 0 0 0 3 robot$(arg robot)/odom robot$(arg robot)/base_link 20"/>
      
      	<node name="map_server" pkg="map_server" type="map_server" args="$(env HOME)/catkin_ws/maps/last_map.yaml"/>
      
        <node name="robot_visualisation" pkg="robot_visualisation" type="__init__.py" output="screen"/>

</launch>
