<launch>
	<arg name="robot" value="01"/>
	
	<machine name="neato" address="192.168.150.101" user="odroid" default="true" env-loader="/home/odroid/catkin_ws/devel/env.sh"/>
	<machine name="$(env USER)" address="192.168.150.1" user="$(env USER)" default="false" env-loader="$(env HOME)/catkin_ws/devel/env.sh"/>
	  
	<node name="gui_controller" pkg="gui_controller" type="__init__.py" output="screen" machine="$(env USER)">
		<remap from="cmd_vel" to="robot$(arg robot)/cmd_vel"/>
	</node>
</launch>
